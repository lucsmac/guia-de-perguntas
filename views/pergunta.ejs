<%- include ('./partials/header.ejs') %>
    <body>
        <%- include ('./partials/navbar.ejs') %>
        
        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <br>
            <p><%= pergunta.desc %></p>
            <hr>
            <form method="POST" action="/responder">
                <h3>Responda</h3>
                <label for="corpo">Resposta:</label>
                <textarea name="corpo" placeholder="Digite a sua resposta..." class="form-control"></textarea>
                <input type="hidden" name="perguntaID" value="<%= pergunta.id %>">
                <br>
                <button class="btn btn-primary">Responder</button>
            </form>
            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach((resposta) => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p>
                            <%= resposta.corpo %>
                        </p>
                    </div>
                </div>
            <% }) %> 
            <br>
        </div>
    </body>
<%- include ('./partials/footer.ejs') %>